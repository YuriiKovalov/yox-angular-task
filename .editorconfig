# Editor configuration
# https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
# Цей параметр не стандартний — видаляємо або лишаємо тільки для IDE
# quote_type = single   ← можна видалити (Prettier вже керує цим)
# ij_typescript_use_double_quotes = false ← прибрати, щоб не було warning

[*.md]
max_line_length = off
trim_trailing_whitespace = false
